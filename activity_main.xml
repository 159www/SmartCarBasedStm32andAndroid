<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:screenOrientation="landscape">
    <!--运动控制 -->
    <LinearLayout
        android:layout_width="600px"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--前进键-->
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="200px"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="400px"
                android:layout_height="180px"
                android:id="@+id/go"
                android:background="#FF185ABD"
                android:text="前进">
            </Button>
        </LinearLayout>
        <!--****************************-->
        <!--左转、停止、右转键-->
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="200px"
            android:orientation="horizontal">
            <Button
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="#FF185ABD"
                android:id="@+id/left"
                android:text="左转">
            </Button>
            <TextView
                android:layout_width="10px"
                android:layout_height="200px">
            </TextView>
            <Button
                android:layout_width="180px"
                android:layout_height="200px"
                android:id="@+id/stop"
                android:background="#FFDF0012"
                android:text="停止">
            </Button>
            <TextView
                android:layout_width="10px"
                android:layout_height="200px">
            </TextView>
            <Button
                android:layout_width="200px"
                android:layout_height="200px"
                android:id="@+id/right"
                android:background="#FF185ABD"
                android:text="右转">
            </Button>
        </LinearLayout>
        <!--**************************************-->
        <!--后退键-->
        <LinearLayout
            android:layout_width="600px"
            android:layout_height="200px"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="400px"
                android:layout_height="180px"
                android:id="@+id/back"
                android:background="#FF185ABD"
                android:text="后退">
            </Button>
        </LinearLayout>
        <!--***************************************-->
    </LinearLayout>
    <!--***********************************************************************-->
    <!--设备状态-->
     <LinearLayout
         android:layout_width="400px"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="400px"
             android:layout_height="200px"
             android:orientation="vertical">
             <TextView
                 android:gravity="center"
                 android:layout_width="400px"
                 android:layout_height="200px"
                 android:text="设备状态"
                 android:textSize="90px">
             </TextView>
         </LinearLayout>
         <LinearLayout
             android:layout_width="400px"
             android:layout_height="200px"
             android:gravity="center"
             android:orientation="horizontal">
             <TextView
                 android:gravity="center"
                 android:layout_width="380px"
                 android:layout_height="200px"
                 android:id="@+id/device_state"
                 android:background="#FFDF0012"
                 android:text="离线"
                 android:textSize="70px"
                 android:textColor="#FF499C54">
             </TextView>
         </LinearLayout>
     </LinearLayout>
    <!--***********************************************************************-->
    <!--速度及角度调节-->
    <LinearLayout
        android:layout_width="500px"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="500px"
            android:layout_height="200px"
            android:orientation="horizontal">
            <TextView
                android:gravity="fill_vertical"
                android:layout_width="500px"
                android:layout_height="200px"
                android:text="距离："
                android:textSize="50px"
                android:id="@+id/distance_show">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="500px"
            android:layout_height="400px"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="fill_vertical"
                android:layout_width="500px"
                android:layout_height="100px"
                android:text="测距角度："
                android:id="@+id/angular_shower">

            </TextView>
            <SeekBar
                android:layout_width="500px"
                android:layout_height="100px"
                android:max="97"
                android:min="88"
                android:id="@+id/angular_setter"
                >
            </SeekBar>
            <TextView
                android:gravity="fill_vertical"
                android:layout_width="500px"
                android:layout_height="100px"
                android:text="速度控制"
                android:id="@+id/speed_shower">

            </TextView>
            <SeekBar
                android:layout_width="500px"
                android:layout_height="100px"
                android:max="100"
                android:id="@+id/speed_setter"
                >
            </SeekBar>

        </LinearLayout>
    </LinearLayout>
    <!--***********************************************************************-->


</LinearLayout>